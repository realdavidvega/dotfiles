// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "icon_theme": "Catppuccin Mocha",
  "base_keymap": "JetBrains",
  "ui_font_size": 14,
  "buffer_font_family": "CaskaydiaCove Nerd Font Mono",
  // "buffer_font_family": "MesloLGS NF",
  "buffer_font_weight": 500,
  "buffer_font_size": 13,
  "buffer_line_height": "standard",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "indent_guides": {
    "coloring": "indent_aware",
    "background_coloring": "indent_aware"
  },
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "inlay_hints": {
    "enabled": false
  },
  "terminal": {
    "font_family": "CaskaydiaCove Nerd Font Mono",
    // "font_family": "MesloLGS NF",
    "font_size": 13,
    "copy_on_select": true,
    "keep_selection_on_copy": true
  },
  "languages": {
    "Python": {
      "language_servers": ["pylsp", "ruff", "ty"],
      "format_on_save": "on",
      "wrap_guides": [120],
      "preferred_line_length": 120,
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "pylsp": {
      "binary": {
        "path": "/Users/david/.local/bin/pylsp"
      },
      "settings": {
        "plugins": {
          "pycodestyle": {
            "enabled": false
          },
          "pyflakes": {
            "enabled": false
          },
          "mccabe": {
            "enabled": false
          },
          "autopep8": {
            "enabled": false
          },
          "yapf": {
            "enabled": false
          }
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 120,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    },
    "ty": {
      "binary": {
        "path": "/Users/david/.local/bin/ty",
        "arguments": ["server"]
      }
    },
    "metals": {
      "binary": {
        "arguments": ["-Dmetals.http=on"]
      },
      "initialization_options": {
        "isHttpEnabled": true
      },
      "enableBestEffort": true,
      "defaultBspToBuildTool": true,
      "scalafmtConfigPath": ".scalafmt.conf",
      "scalafixConfigPath": ".scalafix.conf",
      "autoImportBuild": "all",
      "settings": {
        "inlayHints": {
          "inferredTypes": {
            "enable": true
          }
        }
      }
    }
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.idea",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/.mypy_cache",
    "**/.ruff_cache",
    "**/.ropeproject",
    "**/report",
    "**/node_modules",
    "**/.venv",
    "**/__pycache__"
  ]
}
